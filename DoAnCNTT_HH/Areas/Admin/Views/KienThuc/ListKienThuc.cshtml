@using PagedList.Mvc;
@using PagedList;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_layout_admin.cshtml";
    //var ListC = (PagedList.IPagedList<Model.EF.BaiHoc>)ViewBag.ListCSharp;
    //var ListJ = (PagedList.IPagedList<Model.EF.BaiHoc>)ViewBag.ListJava;
    //var ListP = (PagedList.IPagedList<Model.EF.BaiHoc>)ViewBag.ListPython;

}
@section header{
    Danh sách bài học
}
@section PageName{
    Bài học
}
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Danh sách bài học Csharp</h3>
                <div class="box-tools">
                    <div class="input-group" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control input-sm pull-right" placeholder="Search" />
                        <div class="input-group-btn">
                            <button class="btn btn-sm btn-default"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </div><!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <tr>
                        <th>ID</th>
                        <th>Bài học</th>
                        <th>Tên bài học</th>
                        <th>Ngày tạo</th>
                        <th>Chỉnh sửa</th>
                    </tr>

                    @foreach (var item in ViewBag.ListCSharp)
                    {
                        <tr id="row_@item.BaiHocID">
                            <td>@item.BaiHocID.ToString()</td>
                            <td>@item.Ten.ToString()</td>
                            <td>@item.TieuDe</td>
                            @if (item.NgayTao != null)
                            {
                                <td>@item.NgayTao.ToString()</td>
                            }
                            else
                            {
                                <td>Đang cập nhật</td>
                            }

                            <td>
                                <a href="/Admin/KienThuc/Edit/@item.BaiHocID">Sửa</a>|
                                @Ajax.ActionLink("Xoá", "Delete", new { @id = item.BaiHocID }, new AjaxOptions
                                       {
                                           Confirm = "Bạn có muốn xoá bản ghi này?",
                                           OnComplete = "$('#row_" + @item.BaiHocID + "').remove()",
                                           HttpMethod = "Delete"
                                       })
                            </td>
                        </tr>
                    }


                </table>
                @Html.PagedListPager( (IPagedList)ViewBag.ListCSharp, page => Url.Action("ListKienThuc", new { page}))
            </div><!-- /.box-body -->
        </div><!-- /.box -->
    </div>
</div>

